{
	"bsonType": "object",
	"permission": {
		"create": false,
		"delete": false,
		"read": "doc.is_on_sale == true",
		"update": false
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（商品 ID），系统自动生成"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"category_id": {
			"bsonType": "string",
			"description": "分类",
			"label": "分类",
			"foreignKey": "wfy-goods-categories._id",
			"enum": {
				"collection": "wfy-goods-categories",
				"field": "name as text, _id as value",
				"where": "name != null",
				"orderby": "sort"
			}
		},
		"name": {
			"bsonType": "string",
			"description": "商品名称",
			"label": "商品名称",
			"trim": "both"
		},
		"price": {
			"bsonType": "int",
			"description": "商品价格（分）",
			"label": "商品价格（分）"
		},
		"goods_banner_imgs": {
			"bsonType": "array",
			"description": "商品详情页的banner图地址",
			"label": "商品轮播图",
			"arrayType": "file",
			"multiple": true,
			"fileMediaType": "image",
			"fileExtName": "jpg,png",
			"maxLength": 5
		},
		"goods_thumb": {
			"bsonType": "file",
			"fileMediaType": "image",
			"fileExtName": "jpg,png",
			"description": "商品缩略图，用于在列表或搜索结果中预览显示",
			"label": "商品缩略图"
		},
		"goods_desc": {
			"bsonType": "string",
			"description": "商品详细描述",
			"label": "商品详细描述",
			"trim": "both"
		},
		"goods_sn": {
			"bsonType": "string",
			"description": "商品的唯一货号",
			"label": "商品编号",
			"trim": "both"
		},
		"is_best": {
			"bsonType": "bool",
			"description": "是否精品",
			"label": "是否精品"
		},
		"is_hot": {
			"bsonType": "bool",
			"description": "是否热销",
			"label": "是否热销"
		},
		"is_new": {
			"bsonType": "bool",
			"description": "是否新品",
			"label": "是否新品"
		},
		"is_on_sale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"label": "是否上架销售",
			"defaultValue": true
		},
		"keywords": {
			"bsonType": "string",
			"description": "商品关键字，为搜索引擎收录使用",
			"label": "商品关键字",
			"trim": "both"
		}
	},
	"required": [
		"category_id",
		"goods_sn",
		"name",
		"price",
		"goods_banner_imgs",
		"goods_thumb",
		"goods_desc"
	]
}
