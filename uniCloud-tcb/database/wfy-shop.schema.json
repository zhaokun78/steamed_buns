// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["type", "name", "owner_id", "city_code", "address", "business_hour_start", "business_hour_end", "business_state"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"fieldRules": [{
		"rule": "business_hour_start < business_hour_end",
		"errorMessage": "结束营业时间需大于开始营业时间"
	}],
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"type": {
			"bsonType": "int",
			"description": "店铺类型，0代表直营店、1代表加盟店",
			"label": "店铺类型",
			"enum": [{
				"text": "直营店",
				"value": 0
			}, {
				"text": "加盟店",
				"value": 1
			}]
		},
		"name": {
			"bsonType": "string",
			"description": "店铺名称",
			"label": "店铺名称"
		},
		"owner_id": {
			"bsonType": "string",
			"description": "店主",
			"label": "店主",
			"foreignKey": "uni-id-users._id"
		},
		"city_code": {
			"bsonType": "string",
			"description": "所在城市编码",
			"label": "所在城市",
			"foreignKey": "opendb-city-china.code"
		},
		"address": {
			"bsonType": "string",
			"description": "详细地址",
			"label": "详细地址"
		},
		"business_hour_start": {
			"bsonType": "int",
			"description": "每天几点开始营业",
			"label": "每天几点开始营业",
			"minimum": 0,
			"maximum": 23,
			"defaultValue": 6
		},
		"business_hour_end": {
			"bsonType": "int",
			"description": "每天几点结束营业",
			"label": "每天几点结束营业",
			"minimum": 0,
			"maximum": 23,
			"defaultValue": 18
		},
		"business_state": {
			"bsonType": "int",
			"description": "营业状态：0代表自动、1代表营业，2代表打烊",
			"label": "营业状态",
			"enum": [{
				"text": "自动",
				"value": 0
			}, {
				"text": "营业",
				"value": 1
			}, {
				"text": "打烊",
				"value": 2
			}]
		}
	}
}
