// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": ["order_id", "goods_id", "price", "num"],
	"permission": {
		"create": true,
		"delete": false,
		"read": "doc.user_id == auth.uid",
		"update": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"order_id": {
			"bsonType": "string",
			"description": "订单ID",
			"foreignKey": "uni-id-base-order._id"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "商品ID",
			"foreignKey": "wfy-goods._id"
		},
		"goods_name": {
			"bsonType": "string",
			"description": "商品名称"
		},
		"price": {
			"bsonType": "int",
			"description": "价格（分）"
		},
		"num": {
			"bsonType": "int",
			"description": "数量"
		}
	}
}
