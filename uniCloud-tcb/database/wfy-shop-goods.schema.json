// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"description": "",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": "doc.creater == auth.uid",
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"creater": {
			"bsonType": "string",
			"description": "创建人ID",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"shop_id": {
			"bsonType": "string",
			"description": "店铺ID"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "商品ID"
		},
		"price": {
			"bsonType": "int",
			"description": "商品价格（分）",
			"label": "商品价格（分）",
			"minimum": 1,
			"maximum": 50000
		},
		"is_on_sale": {
			"bsonType": "bool",
			"description": "是否上架销售",
			"label": "是否上架销售",
			"defaultValue": true
		}
	}
}
