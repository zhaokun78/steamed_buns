{
	"bsonType": "object",
	"permission": {
		"create": true,
		"delete": "doc.user_id == auth.uid",
		"read": "doc.user_id == auth.uid",
		"update": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"label": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"area_code": {
			"bsonType": "string",
			"description": "区级编码",
			"enum": {
				"collection": "opendb-city-china",
				"field": "code as value, name as text, eq(type, 2) as isleaf",
				"orderby": "value asc"
			},
			"enumType": "tree",
			"foreignKey": "opendb-city-china.code",
			"title": "省市区"
		},
		"address": {
			"bsonType": "string",
			"description": "省市区后面的详细住址，包含街道小区房间号",
			"title": "详细住址",
			"trim": "both"
		},
		"alias": {
			"bsonType": "string",
			"description": "地址别名，例如：家、公司、学校",
			"title": "地址别名",
			"trim": "both"
		},
		"is_default": {
			"bsonType": "bool",
			"defaultValue": false,
			"description": "是否为默认地址",
			"title": "默认地址"
		},
		"mobile": {
			"bsonType": "string",
			"description": "手机号码，加密存储",
			"pattern": "^\\+?[0-9-]{3,20}$",
			"title": "手机号",
			"trim": "both"
		},
		"name": {
			"bsonType": "string",
			"description": "收货人",
			"title": "收货人",
			"trim": "both"
		},
		"sex": {
			"bsonType": "int",
			"description": "性别",
			"title": "性别",
			"enum": [{
				"value": 0,
				"text": "男"
			}, {
				"value": 1,
				"text": "女"
			}]
		},
		"user_id": {
			"bsonType": "string",
			"description": "用户id，参考uni-id-users表",
			"label": "用户id",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		}
	},
	"required": [
		"name",
		"sex",
		"mobile",
		"area_code",
		"address",
		"user_id"
	]
}
